<p id="notice"><%= notice %></p>

<h1>Reviews</h1>

<table>
  <thead>
    <tr>
      <th>Author</th>
      <th>Rating</th>
      <th>Text</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reviews.each do |review| %>
      <tr>
        <td><%= review.author %></td>
        <td><%= review.rating %></td>
        <td><%= review.text %></td>
        <td><%= link_to 'Show', ([@product, review]) %></td>
        <td><%= link_to 'Edit',
          edit_product_review_path(@product, review) %></td>
        <td><%= link_to 'Destroy', ([@product, review]),
          method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= link_to 'Product', product_path(@product) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Review', new_product_review_path %> <br>
