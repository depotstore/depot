<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @order.name %>
</p>

<p>
  <strong>Address:</strong>
  <%= @order.address %>
</p>

<p>
  <strong>Email:</strong>
  <%= @order.email %>
</p>

<p>
  <strong>Pay type:</strong>
  <%= @order.pay_type %>
</p>

<p>
  <strong>Ship date:</strong>
  <% if @order.ship_date %>
    <%= @order.ship_date.strftime("%Y %m %d at: %l %M %P") %>
  <% else %>
    Not Shipped
  <% end %>
</p>

