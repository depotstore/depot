<p id="notice"><%= notice %></p>
<% if @notice %>
  <p id="notice"><%= @notice %></p>
<% end %>
<h1>Orders</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Email</th>
      <th>Pay type</th>
      <th>Shipped Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.name %></td>
        <td><%= order.address %></td>
        <td><%= order.email %></td>
        <td><%= order.pay_type %></td>
        <% if order.ship_date %>
          <td><%= order.ship_date.strftime("%Y %m %d") %></td>
        <% else %>
          <td>Not Shipped</td>
        <% end %>
        <td><%= link_to 'Show', order %></td>
        <td><%= link_to 'Edit', edit_order_path(order) %></td>
        <td><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= button_to 'Ship', ship_order_path(order), remote: true %></td>
      </tr>
    <% end %>
  </tbody>
</table>

